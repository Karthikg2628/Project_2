<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    >

    <!-- Connection Status Bar -->
    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status: Waiting for connection..."
        android:textColor="@android:color/holo_green_light"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#1E1E1E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Frame Preview with Label -->
    <TextView
        android:id="@+id/frameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received Frames:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/connectionStatus"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/frameView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:background="#000000"
        android:contentDescription="Received video frames"
        app:layout_constraintTop_toBottomOf="@id/frameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>
    <ImageView
    android:id="@+id/imageView"
    android:layout_width="0dp"
    android:layout_height="300dp"
    android:scaleType="fitCenter"
    android:background="#000000"
    android:contentDescription="Received video frames"
    app:layout_constraintTop_toBottomOf="@id/frameLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="8dp"/>

    <!-- Video Player with Label -->
    <TextView
        android:id="@+id/videoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconstructed Video:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/frameView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/videoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <!-- Stats Panel -->
    <TextView
        android:id="@+id/statsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Frames received: 0\nLatency: 0ms"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:lineSpacingExtra="4sp"
        app:layout_constraintTop_toBottomOf="@id/videoView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:background="#1E1E1E"/>

    <!-- Control Buttons -->
    <Button
        android:id="@+id/btnSaveVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Video"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/statsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnToggleMode"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/btnToggleMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Switch to Fullscreen"
        app:layout_constraintTop_toBottomOf="@id/statsText"
        app:layout_constraintStart_toEndOf="@id/btnSaveVideo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>